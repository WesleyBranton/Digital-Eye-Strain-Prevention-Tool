{
    "manifest_version": 2,
    "name": "Digital Eye Strain Prevention Tool",
    "version": "2.1",
    "description": "Prevent permanent damage to your eyes while browsing the web with this tool",
    "author": "Wesley Branton",
    
    "developer": {
        "name": "Wesley Branton",
        "url": "http://addons.wesleybranton.com"
    },

    "icons": {
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "64": "icons/icon-64.png",
        "96": "icons/icon-96.png"
    },
    
    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": {
            "32": "icons/browserAction/disabled.png"
        },
        "default_title": "Digital Eye Strain Prevention Tool"
    },
    
    "options_ui": {
        "page": "options/options.html",
        "browser_style": false
    },

    "permissions": [
        "alarms",
        "storage"
    ],

    "optional_permissions": [
        "notifications"
    ]
}